{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "simple-import-sort"],
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react", "^next"],
          ["^@?\\w", "^\\w"],
          ["^@components"],
          ["^@templates", "^@organisms", "^@molecules", "^@atoms"],
          ["^@stores", "^@hooks", "^@utils"],
          ["^@config", "^@const", "^@customTypes"],
          ["^@styles", "^@public", "^@types"],
          ["^[./]"]
        ]
      }
    ]
  }
}
